{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "typeRoots": ["./node_modules/@types", "./types"], // Ensure this is correct
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"], // Ensure this includes your custom types
  "exclude": ["node_modules"]
}
